                    <li><a href="#">Element</a></li>
                    <li><a href="#">Element</a></li>
                </ul>
                
                <ul class="sitemap">
                    <li><a href="#">Section</a></li>
                    <li><a href="#">Element</a></li>
                    <li><a href="#">Element</a></li>
                </ul>
                
                <ul class="sitemap">
                    <li><a href="#">Section</a></li>
                    <li><a href="#">Element</a></li>
                    <li><a href="#">Element</a></li>
                </ul>
            </div>

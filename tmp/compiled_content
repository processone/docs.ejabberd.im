        <span class="n">String</span> <span class="n">url</span> <span class="o">=</span> <span class="n">extractURL</span><span class="o">(</span><span class="n">notification</span><span class="o">);</span>        
        <span class="k">if</span> <span class="o">(</span><span class="n">url</span> <span class="o">!=</span> <span class="kc">null</span><span class="o">)</span> <span class="o">{</span>

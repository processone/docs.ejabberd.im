    <title type="html">New Documentation Site</title>
    <published>2013-09-15T22:00:00Z</published>
    <updated>2013-09-15T22:00:00Z</updated>
    <author>
      <name>mremond</name>
      <uri>https://github.com/mremond</uri>
    </author>
